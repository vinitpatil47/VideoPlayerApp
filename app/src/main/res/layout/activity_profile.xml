<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500sp">

            <LinearLayout
                android:id="@+id/toplinearlayout"
                android:background="@color/startblue"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profileimage"
                    android:layout_width="100sp"
                    android:layout_height="105dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@+id/toplinearlayout"
                android:layout_marginTop="30sp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/my_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="45sp"
                    android:paddingStart="45sp">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        app:srcCompat="@drawable/ic_video_library_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25sp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:text="My videos"
                        android:layout_marginStart="25sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15sp"
                    android:paddingLeft="45sp"
                    android:paddingStart="45sp">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        app:srcCompat="@drawable/ic_settings_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25sp"
                        android:textSize="15sp"
                        android:text="Setting"
                        android:textColor="#000000"
                        android:layout_marginStart="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15sp"
                    android:paddingLeft="45sp"
                    android:paddingStart="45sp">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        app:srcCompat="@drawable/ic_history_black_24dp"
                        android:contentDescription="TODO"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25sp"
                        android:textColor="#000000"
                        android:text="History"
                        android:textSize="15sp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/watch_later"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15sp"
                    android:paddingLeft="45sp"
                    android:paddingStart="45sp">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        app:srcCompat="@drawable/ic_watch_later_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25sp"
                        android:textSize="15sp"
                        android:text="Watch Later"
                        android:textColor="#000000"
                        android:layout_marginStart="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liked_videos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15sp"
                    android:paddingLeft="45sp"
                    android:paddingStart="45sp">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        app:srcCompat="@drawable/ic_thumb_up_blue_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25sp"
                        android:textSize="15sp"
                        android:text="Liked videos"
                        android:textColor="#000000"
                        android:layout_marginStart="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15sp"
                    android:paddingLeft="45sp"
                    android:paddingStart="45sp">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        app:srcCompat="@drawable/ic_exit_to_app_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25sp"
                        android:textSize="15sp"
                        android:text="Logout"
                        android:textColor="#000000"
                        android:layout_marginStart="25sp" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/upload"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25sp"
                android:layout_marginRight="25sp">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:backgroundTint="@color/toolbar"
                    android:background="@drawable/upload" />

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="4sp"
                    app:srcCompat="@drawable/ic_file_upload_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>